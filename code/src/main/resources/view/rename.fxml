<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchor" prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #e8e8e8;" stylesheets="@../style/style.css"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="uk.co.conoregan.controller.RenameController">
    <children>
        <HBox prefHeight="720.0" prefWidth="1280.0">
            <children>
                <VBox alignment="CENTER" prefHeight="720.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button fx:id="buttonMenuRename" alignment="BASELINE_LEFT" graphicTextGap="20.0"
                                maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefWidth="200.0"
                                styleClass="buttonMenuSelected" text="Rename">
                            <font>
                                <Font size="16.0"/>
                            </font>
                            <padding>
                                <Insets bottom="15.0" left="20.0" top="15.0"/>
                            </padding>
                        </Button>
                        <Button fx:id="buttonMenuSearch" alignment="BASELINE_LEFT" graphicTextGap="20.0"
                                maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefWidth="200.0"
                                styleClass="buttonMenu" text="Search">
                            <font>
                                <Font size="16.0"/>
                            </font>
                            <padding>
                                <Insets bottom="15.0" left="20.0" top="15.0"/>
                            </padding>
                        </Button>
                        <Button fx:id="buttonMenuSettings" alignment="BASELINE_LEFT" graphicTextGap="20.0"
                                maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefWidth="200.0"
                                styleClass="buttonMenu" text="Settings">
                            <font>
                                <Font size="16.0"/>
                            </font>
                            <padding>
                        <Insets bottom="15.0" left="20.0" top="15.0" />
                     </padding>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
            <VBox prefHeight="720.0" prefWidth="1080.0" spacing="20.0">
               <children>
                   <HBox prefHeight="680.0" prefWidth="1040.0" spacing="20.0">
                       <children>
                           <VBox prefWidth="520.0" spacing="10.0">
                               <children>
                                   <HBox alignment="CENTER" prefWidth="200.0">
                                       <children>
                                           <Label text="Rename From">
                                               <font>
                                                   <Font size="20.0"/>
                                               </font>
                                               <HBox.margin>
                                                   <Insets/>
                                               </HBox.margin>
                                           </Label>
                                       </children>
                                   </HBox>
                                   <ListView fx:id="listViewRenameFrom" prefHeight="550.0" prefWidth="400.0"/>
                                   <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="20.0">
                                       <children>
                                           <Button fx:id="buttonOpenFileDialog" mnemonicParsing="false"
                                                   onAction="#openFileDialog" prefHeight="30.0" text="Add Source"/>
                                           <CheckBox mnemonicParsing="false" text="Include Sub-Folders"/>
                                           <Button fx:id="buttonGetRenameSuggestions" mnemonicParsing="false"
                                                   onAction="#getSuggestedNames" prefHeight="30.0"
                                                   text="Get Rename Suggestions"/>
                                       </children>
                                   </HBox>
                               </children>
                           </VBox>
                           <VBox prefWidth="520.0" spacing="10.0">
                               <children>
                                   <HBox alignment="CENTER" prefWidth="200.0">
                                       <children>
                                           <Label text="Rename To">
                                               <font>
                                                   <Font size="20.0"/>
                                               </font>
                                           </Label>
                                       </children>
                                   </HBox>
                                   <ListView fx:id="listViewRenameTo" prefHeight="550.0" prefWidth="400.0"/>
                                   <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="20.0">
                                       <children>
                                           <Button fx:id="buttonRenameSelected" mnemonicParsing="false"
                                                   text="Rename Selected"/>
                                           <Button fx:id="buttonRenameAll" mnemonicParsing="false" onAction="#renameAll"
                                                   text="Rename ALL"/>
                                       </children>
                                       <VBox.margin>
                                           <Insets/>
                                       </VBox.margin>
                                   </HBox>
                               </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
